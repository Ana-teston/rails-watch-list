
<%= link_to 'Back to Lists', lists_path %>

<p>Name: <%= @list.name %></p>

<p>Movies:</p>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <% movie = bookmark.movie %>
    <li>
      <%= link_to movie.title, movie_path(movie) %>
      <br>
      <%= image_tag(movie.poster_url, alt: movie.title, style: "max-width: 200px;") %>
      <p><strong>Overview:</strong> <%= movie.overview %></p>
      <% if bookmark.comment.present? %>
        <p><strong>Comment:</strong> <%= bookmark.comment %></p>
      <% end %>
      <%= link_to 'Delete Bookmark', list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?' }, class: 'btn btn-danger btn-sm' %>


    </li>
  <% end %>
</ul>
